{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "header"
    ],
    "ignorePatterns": ["**/*.js"],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "header/header": [
            2,
            "line",
            [
                {"pattern": " (?:.+\\/)*.+"},
                " Huechan /place/ Backend",
                {"pattern": " \\(c\\) \\d{4}(?:-\\d{4})? HUE_TrashMe"}
            ],
            2
        ]
    }
}
